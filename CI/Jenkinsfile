pipeline {
    agent any

    environment {
        DOCKERHUB_CREDS=credentials('a930af01-7285-420d-b3b5-66a9b5dd7752')
        LC_ALL = "en_US.UTF-8"
        LANG    = "en_US.UTF-8"
        LANGUAGE = "en_US.UTF-8"
    }

    options {
        timestamps()
        skipDefaultCheckout(true)
    }

    stages {
        stage('Clone github repository') {
            steps {
                cleanWs()
                sh '''
                    git clone -b main https://github.com/Alex-Andrv/mle-lab1.git
                '''
            }
        }

        stage('Checkout repo dir') {
            steps {
                sh '''
                    cd mle-lab1
                    ls -la
                '''
            }
        }

        stage('Login') {
            steps {
                sh 'export PATH=$PATH:/usr/local/bin && /usr/local/bin/docker --version'
                sh 'echo $DOCKERHUB_CREDS_USR'
                sh '''
                    echo $DOCKERHUB_CREDS_PSW | /usr/local/bin/docker login -u $DOCKERHUB_CREDS_USR --password-stdin
                '''
            }
        }

        stage('Create and run docker container') {
            steps {
                script {
                    try {
                        sh '''
                            cd mle-lab1
                            /usr/local/bin/docker-compose build
                        '''
                    } finally {
                        sh '''
                            cd mle-lab1
                            /usr/local/bin/docker-compose up -d
                        '''
                    }
                }
            }
        }

        stage('Checkout container logs') {
            steps {
                dir("mle-template") {
                    sh '''
                        docker-compose up -d
                        containerId=$(/usr/local/bin/docker ps -qf "name=mle-template-web-1")
                        echo $containerId
                        if [ -z "$containerId" ]; then
                            echo "No container running"
                        else
                            /usr/local/bin/docker logs --tail 1000 -f $containerId
                        fi
                    '''
                }
            }
        }

        stage('Checkout coverage report') {
            steps {
                dir("mle-template") {
                    sh '''
                        export PATH=$PATH:/usr/local/bin && docker-compose logs -t --tail 10
                    '''
                }
            }
        }

        stage('Push') {
            steps {
                sh '''
                    export PATH=$PATH:/usr/local/bin && /usr/local/bin/docker push sesh31/mle-lab2:latest
                '''
            }
        }
    }

    post {
        always {
            sh '''
                export PATH=$PATH:/usr/local/bin && /usr/local/bin/docker logout
            '''
        }
    }
}
